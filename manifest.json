{
  "name": "Nodium",
  "description": "An extension for bypassing Medium paywall",
  "version": "2.2",
  "permissions": [
    "scripting",
    "webNavigation",
    "cookies",
    "storage"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Nodium - An extension for bypassing Medium paywall by @vigov5"
  },
  "icons": {
    "128": "logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "run_at": "document_start",
      "js": [
        "inject_preload_hook.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject_preload_hook.js",
        "hook.js",
        "detector.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "manifest_version": 3
}